extends ../layout/index.pug

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina 

    div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl md:px-10 mb-11")
        form(class="space-y-8")
                div(class="space-y-5")
                    h3(class="text-lg leading-6 font-medium text-gray-900") Informacion de la propiedad
                    p(class="text-gray-600") Añade mas informacion de la propiedad en venta

                    
                    div 
                        label.blcok-text-sm.uppercase.text-gray-500.mb-2.font-bold(for="titulo") Titulo del anuncio
                        input#titulo.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Titulo de propiedad ej. Casa en la playa" type="text" name="titulo")

                    div 
                        label.blcok-text-sm.uppercase.text-gray-500.mb-2.font-bold(for="descripcion") Descripcion
                        textarea#descripcion.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Añade la descripcion de la propiedad" name="descripcion")

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/2") 
                            label.blcok-text-sm.uppercase.text-gray-500.mb-2.font-bold(for="categoria") Categoria
                            select#categoria.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")
                                option(value="") - Seleccion categoria -
                        div(class="md:w-1/2") 
                            label.blcok-text-sm.uppercase.text-gray-500.mb-2.font-bold(for="precio") Precio
                            select#precio.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")
                                option(value="") - Seleccione un precio -

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/3") 
                            label.blcok-text-sm.uppercase.text-gray-500.mb-2.font-bold(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(name="habitaciones")
                                option(value="") - Seleccion categoria -
                                - var n = 1
                                    while n < 10
                                        option(value=n) #{n++} 
                        div(class="md:w-1/3") 
                            label.blcok-text-sm.uppercase.text-gray-500.mb-2.font-bold(for="estacionamiento") Estacionamiento
                            select#estacionamiento.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(name="estacionamiento")
                                option(value="") - Seleccion categoria -
                                - var n = 1
                                    while n < 5
                                        option(value=n) #{n++} 

                        div(class="md:w-1/3") 
                            label.blcok-text-sm.uppercase.text-gray-500.mb-2.font-bold(for="wc") Baños
                            select#wc.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(name="wc")
                                option(value="") - Seleccion categoria -
                                - var n = 1
                                    while n < 5
                                        option(value=n) #{n++}

                    div(class="border-gray-200, border-t, py-5 space-y-5")                    
                        h3(class="text-lg leading-6 font-medium text-gray-900") UBICACION
                        p(class="text-gray-600") Ubica la propiedad en el mapa                 
                        #mapa.h-96

                        div 
                            p.calle
                        input(type="hidden" name="calle" id="calle")
                        input(type="hidden" name="latitud" id="latitud")
                        input(type="hidden" name="longitud" id="longitud")


block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")
